<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/base_item"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:descendantFocusability="blocksDescendants">

    <!--Cover View-->
    <com.example.LocalDelicacies.CoverView
            xmlns:custom="http://schemas.android.com/apk/res/com.example.LocalDelicacies"
            android:id="@+id/detail_cover_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            custom:placeHolder="@drawable/placeholder"
            custom:showRatingBar="false"/>

    <!--Detail View Description-->
    <TextView
            android:id="@+id/detail_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/rating_bar"
            android:paddingTop="@dimen/text_padding"
            android:gravity="left"/>

</LinearLayout>