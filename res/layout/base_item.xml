<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/base_item"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <TextView android:id="@+id/base_item_name" android:layout_width="match_parent" android:layout_height="match_parent"/>
    <ImageView android:id="@+id/base_item_image" android:layout_width="match_parent" android:layout_height="match_parent"/>
    <Button android:id="@+id/base_item_symbol" android:layout_width="match_parent" android:layout_height="match_parent"/>
</LinearLayout>